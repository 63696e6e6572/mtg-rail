<%= form_with model: [ @card, @card.comments.build ] do |form| %>
<%= javascript_pack_tag 'textarea-auto-resize' %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, class: 'txta' %>
  </p>
  
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <p>
    <%= form.submit %>
  </p>
<% end %>
